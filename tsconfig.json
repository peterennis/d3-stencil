{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "include": [
    "./**/*",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "docs",
    "node_modules"
  ]
}
